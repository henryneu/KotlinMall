<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchWrap.Horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/news_height"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/corner_news_bg"
    android:paddingStart="@dimen/common_padding_middle"
    android:paddingEnd="@dimen/common_margin_small"
    android:paddingTop="@dimen/common_padding_small"
    android:paddingBottom="@dimen/common_padding_small" >

    <ImageView
        style="@style/WrapMatch"
        android:layout_marginEnd="@dimen/common_padding_middle"
        android:src="@drawable/flipper_news_icon" />

    <View
        style="@style/DividerFixedWidth"
        android:layout_marginEnd="@dimen/common_padding_middle" />

    <ViewFlipper
        android:id="@+id/mNewsFlipper"
        style="@style/MatchWrap"
        android:flipInterval="3000" />

</LinearLayout>